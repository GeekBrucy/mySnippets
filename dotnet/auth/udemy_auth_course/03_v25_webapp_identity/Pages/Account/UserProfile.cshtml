@page
@model _03_v25_webapp_identity.Pages.Account.UserProfile
@{
    ViewData["Title"] = "UserProfile";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="UserProfileViewModel.Email"></label>
        </div>
        <div class="col-5">
            <input class="form-control" type="text" asp-for="UserProfileViewModel.Email" readonly>
            <span class="text-danger" asp-validation-for="UserProfileViewModel.Email"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="UserProfileViewModel.Department"></label>
        </div>
        <div class="col-5">
            <input class="form-control" type="text" asp-for="UserProfileViewModel.Department">
            <span class="text-danger" asp-validation-for="UserProfileViewModel.Department"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="UserProfileViewModel.Position"></label>
        </div>
        <div class="col-5">
            <input class="form-control" type="text" asp-for="UserProfileViewModel.Position">
            <span class="text-danger" asp-validation-for="UserProfileViewModel.Email"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="Save">
        </div>
        <div class="col-5">
        </div>
    </div>
</form>
@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">@Model.SuccessMessage</div>
}